{% extends 'base.html.twig' %}

{% block body %}
<div class="row justify-content-center">
    <div class="py-5 text-center">
        <h2>{{ is_edit ? 'Editer une unité / Mesure' : 'Ajouter une unité / Mesure' }}</h2>
    </div>

    <div class="row g-5">
        <main class="form-signin w-100 m-auto">
            {{ form_start(form_unite) }}
            <div class="col-4 mb-3 mx-auto">
                <label class="form-label">Nom de l'unité / mesure</label>
                {{ form_row(form_unite.nomUnite) }}
            </div>
            <div class="row justify-content-center">
                <div class="col-md-1">
                    {{ form_row(form_unite.save) }}
                </div>
                <div class="col-md-1">
                    <a class="btn btn-lg btn-secondary mt-3" href="{{ path('app_unite') }}" role="button">Retour</a>
                </div>
            </div>
            {{ form_end(form_unite) }}
        </main>
    </div>

</div>
{% endblock %}